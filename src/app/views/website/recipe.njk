{% extends 'website/layout.njk' %}

{% block head %}
    <link rel="stylesheet" href="styles/foodfy.css">
    <title>{{recipe.title}}</title>
{% endblock head %}
<body>
    <header>
        {% block header %}
        {% endblock header %}
    </header>
    {% block content %}
        <div class="recipe">
                <div id="{{recipe.id}}"></div>
                <div class="image-content big">
                    <img src="{{recipe.image_url}}" alt="{{recipe.title}}">
                </div>
                <div class="card-infos">
                    <h2>{{recipe.title}}</h2>
                    <p>por {{recipe.chef_name}}</p>
                </div>
                <div class="ingredients">
                    <h3>ü•ö Ingredientes <span class='showhide_btn'>ESCONDER</span></h3>
                    <ul class='recipe_showhide'>
                        {% for ingredient in recipe.ingredients %}
                        <li>{{ingredient}}</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="preparation">
                    <h3>üç≥ Modo de preparo <span class='showhide_btn'>ESCONDER</span></h3>
                    <ul class='recipe_showhide'>
                    {% for step in recipe.preparation %}
                        <li>{{step}}</li>
                    {% endfor %}
                    </ul>
                </div>
                <div class="information">
                    <h3>üìù Informa√ß√µes adicionais <span class='showhide_btn'>ESCONDER</span></h3>
                    <p class='recipe_showhide'>{{recipe.information}}</p>
                </div>
            </div>
        </div>
    {% endblock content %}
</body>