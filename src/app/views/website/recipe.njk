{% extends 'website/layout.njk' %}

{% block head %}
    <link rel="stylesheet" href="styles/recipeIndex.css">
    <title>{{recipe.title}}</title>
{% endblock head %}
<body>
    <header>
        {% block header %}
            <div class="logo">
                <a href="/"><img src="assets\logo.png" alt="LOGO Foodfy"></a>
            </div>
            <div class="header-infos">
                <a href="/about">About</a>
                <a href="/recipes">Recipes</a>
            </div>
        {% endblock header %}
    </header>
    {% block content %}
        <div class="recipe">
                <div id="{{recipe.id}}"></div>
                <div class="image-content">
                    <img src="{{recipe.image_url}}" alt="{{recipe.title}}">
                </div>
                <div class="card-infos">
                    <h2 id>{{recipe.title}}</h2>
                    <p>por {{recipe.author}}</p>
                </div>
                <div class="ingredients">
                    <h3>ü•ö Ingredientes <span class='showhide_btn'>ESCONDER</span></h3>
                    <ul class='recipe_showhide'>
                        {% for ingredient in recipe.ingredients %}
                        <li>{{ingredient}}</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="preparation">
                    <h3>üç≥ Modo de preparo <span class='showhide_btn'>ESCONDER</span></h3>
                    <ul class='recipe_showhide'>
                    {% for step in recipe.steps %}
                        <li>{{step}}</li>
                    {% endfor %}
                    </ul>
                </div>
                <div class="information">
                    <h3>üìù Informa√ß√µes adicionais <span class='showhide_btn'>ESCONDER</span></h3>
                    <p class='recipe_showhide'>{{recipe.infos}}</p>
                </div>
            </div>
        </div>
    {% endblock content %}
</body>