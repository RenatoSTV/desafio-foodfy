{% extends 'admin/admin_layout.njk' %}

{% block head %}
    <title>{{chef.name}}</title>
{% endblock head %}

{% block content %}

    <section class="details">
        <div class="head">
            <h1>Chef:
                {{chef.name}}</h1>
            <div class="options">
                <a id="return" href="/admin/chefs">Voltar</a>
                <a href="/admin/chefs/{{chef.id}}/edit">Editar Chef</a>
            </div>
        </div>
        <div class="chef">
            <div id="{{chef.id}}"></div>

            <img src="{{files[0].src}}" alt="{{files[0].name}}">

            <h2>{{chef.name}}</h2>
            {% if totalRecipes == 1 %}
                <p>{{totalRecipes}}
                    receita</p>
            {% else %}
                <p>{{totalRecipes}}
                    receitas</p>
            {% endif %}

        </div>
        {% if totalRecipes == 0 %}
        {% else %}
            <div class="recipesShow">
                <h2>Receitas</h2>
                <section class="cards recipes">
                    {% for recipe in recipes %}
                        <div class="card">
                            <div class="image-content">
                                <img src="{{recipe.img}}" alt="{{recipe.title}}">
                            </div>
                            <div class="card-infos">
                                <h3 id="id">{{recipe.title}}</h3>
                                <p>por
                                    {{chef.name}}</p>
                                <a href="/admin/recipes/{{recipe.id}}" class="visualizar">Visualizar</a>
                            </div>
                        </div>
                    {% endfor %}

                </section>
            </div>
        {% endif %}
    </section>
{% endblock content %}