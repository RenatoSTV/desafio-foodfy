{% extends 'admin/admin_layout.njk' %}

{% block head %}

    <title>Chefs</title>
{% endblock head %}

{% block content %}
    <div class="head">
        <h2>Gerenciar chefs</h2>
        <a id="create" href="/admin/chefs/create">Criar Chef</a>
    </div>
    <section class="cards chefs">

        {% for chef in chefs %}
        <div class="card">
            <div class="image-content">
                <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
            </div>
            <div class="card-infos">
                <h3 id>{{chef.name}}</h3>
                <a href="/admin/chefs/{{chef.id}}" class="visualizar">Visualizar</a>
            </div>
        </div>
        {% endfor %}

    </section>
{% endblock content %}
