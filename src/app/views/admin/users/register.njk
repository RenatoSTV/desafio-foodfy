{% extends 'admin/admin_layout.njk' %}

{% block head %}
    <title>Criar usuário</title>
{% endblock head %}

{% block content %}
    <section class="user-register form">
        <form action="/admin/users/register" method="POST">
            <div class="head">
                <h2>Criar Usuário</h2>
                <div class="buttons">
                    <button type="submit" class="button" id="save" href="/admin/users/register">Salvar</button>
                    <a class="button" id="cancel" href="/admin/users">Cancelar</a>
                </div>
            </div>

            <div class="fields">
                {% include 'admin/users/fields.njk' %}

                <div class="is_admin">
                    <input 
                        type="checkbox" 
                        name="is_admin" 
                        id="admin" 
                    >
                    <label for="admin">Administrador
                    </label>
                </div>

            </div>
        </form>
    </section>

{% endblock content %}