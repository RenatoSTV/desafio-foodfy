{% extends 'admin/admin_layout.njk' %}

{% block head %}
    <title>{{recipe.title}}</title>
{% endblock head %}

{% block content %}

    <section class="details">
            <div class="head">
                <h1>Receita: {{recipe.title}}</h1>
                <div class="options">
                    <a id="return" href="/admin/recipes">Voltar</a>
                    <a href="/admin/recipes/{{recipe.id}}/edit">Editar receita</a>
                </div>
            </div>
            <div class="recipe">
                <div id="{{recipe.id}}"></div>
                <div class="image-content">
                    <img src="{{recipe.image_url}}" alt="{{recipe.title}}">
                </div>
                <div class="card-infos">
                    <h2 id="id">{{recipe.title}}</h2>
                    <p>por
                        {{recipe.chef_name}}</p>
                </div>
                <div class="ingredients" id="ingred">
                    <h3>🥚 Ingredientes</h3>
                    <ul>
                        {% for ingredient in recipe.ingredients %}
                            <li>- {{ingredient}}</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="preparation">
                    <h3>🍳 Modo de preparo</h3>
                    <ul>
                        {% for step in recipe.preparation %}
                            <li>- {{step}}</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="information">
                    <h3>📝 Informações adicionais</h3>
                    <p>{{recipe.information}}</p>
                </div>
            </div>
        </div>
    </section>
{% endblock content %}