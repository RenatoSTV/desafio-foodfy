{% extends 'admin/session/layout.njk' %}

{% block head %}
    <title>Nova Senha</title>
{% endblock head %}

{% block content %}

    <section class="login container form">

        <form method="POST" action="/admin/password-reset">

            <div class="header-title">
                <h3>Nova Senha</h3>
            </div>
            <div class="fields">

                <div class="item">
                    <div>E-mail</div>
                    <div class="input">
                        <input type="email" name="email" value="{{user.email}}" placeholder="Digite seu email" onblur="Validate.apply(this, 'isEmail')">
                    </div>
                </div>

                <div class="item">
                    <div>Senha</div>
                    <div class="input">
                        <input type="password" name="password" placeholder="Digite sua nova senha">
                    </div>
                </div>

                <div class="item">
                    <div>Repetir senha</div>
                    <div class="input">
                        <input type="password" name="passwordRepeat" placeholder="Repita a nova senha">
                    </div>
                </div>
                
                <input type="hidden" name="token" value="{{token}}">

            </div>
            <div class="footer">
                <button class="button" type="submit">Nova Senha</button>
            </div>
        </form>

    </section>

{% endblock content %}