{% extends 'admin/session/layout.njk' %}

{% block head %}
    <title>Login</title>
{% endblock head %}

{% block content %}

    <section class="login container form">

        <form method="POST" action="/admin/login">

            <div class="header-title">
                <h3>Iniciar SessÃ£o</h3>
            </div>
            <div class="fields">

                <div class="item">
                    <label>E-mail</label>
                    <div class="input">
                        <input type="email" name="email" value="{{user.email}}" placeholder="Digite seu email" onblur="Validate.apply(this, 'isEmail')">
                    </div>
                </div>

                <div class="item">
                    <label>Senha</label>
                    <div class="input">
                        <input type="password" name="password" placeholder="Digite sua senha">
                    </div>
                </div>

            </div>
            <div class="footer">
                <a href="/admin/forgot-password">Perdeu a senha?</a>
                <button class="button" type="submit">Acessar</button>
            </div>
        </form>

    </section>

{% endblock content %}