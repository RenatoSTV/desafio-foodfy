{% extends 'admin/session/layout.njk' %}

{% block head %}
    <title>Esqueci a Senha</title>
{% endblock head %}

{% block content %}

    <section class="login container form">

        <form method="POST" action="">

            <div class="header-title">
                <h3>Esqueceu a Senha?</h3>
            </div>
            <div class="fields">

                <div class="item">
                    <label>E-mail</label>
                    <div class="input">
                        <input type="email" name="email" value="{{user.email}}" placeholder="Digite seu email para recuperar a senha" onblur="Validate.apply(this, 'isEmail')">
                    </div>
                </div>

            </div>
            <div class="footer">
                <button class="button" type="submit">Recuperar</button>
            </div>
        </form>

    </section>

{% endblock content %}